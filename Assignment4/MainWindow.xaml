<Window x:Class="Assignment4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment4"
        mc:Ignorable="d"
        Title="GPA Calculator" Height="450" Width="800" ResizeMode="CanMinimize">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="StudentBorder" Background="White" BorderBrush="Black" BorderThickness="2" Grid.Column="0" Margin="2" CornerRadius="10">
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.7*"/>
                        <RowDefinition Height="0.8*"/>
                        <RowDefinition Height="5*"/>
                        <RowDefinition Height="0.5*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Select Student" FontWeight="Bold" Grid.Row="0" HorizontalAlignment="Center"/>
                    <ComboBox x:Name="StudentList" Width="200" Height="20" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5, 5" SelectionChanged="StudentList_SelectionChanged"/>
                    <Label Content="Data File:" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontWeight="DemiBold"/>
                    <DataGrid x:Name="DataGrid_StudentMarks" Grid.Row="2" SelectionChanged="DataGrid_StudentMarks_SelectionChanged" IsReadOnly="True">

                    </DataGrid>
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="Button_Send" Grid.Column="0" Content="Send to Calculator" VerticalAlignment="Top" Click="Button_Send_Click" IsEnabled="False"/>
                        <Button x:Name="Button_SendAll" Grid.Column="1" Content="Send All to Calculator" VerticalAlignment="Top" Click="Button_SendAll_Click"/>
                        <Button x:Name="Button_DeleteCourse" Grid.Column="2" Content="Delete" VerticalAlignment="Top" IsEnabled="False" Click="Button_DeleteCourse_Click"/>
                    </Grid>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.05*"/>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="1.2*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="Black" Grid.ColumnSpan="2">

                    </Border>

                    <Label Content="Add Student" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>
                    <Label Content="Delete Student" FontWeight="Bold" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Warning: Deletes the currently selected student from system!" Grid.Column="2" Grid.Row="2" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" VerticalAlignment="Center" FontSize="10"/>
                    <Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="0,0,193,0">

                        <Label Content="Name: " HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <TextBox x:Name="TextBox_StudentName" Grid.Column="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="150" Margin="5" TextChanged="TextBox_StudentName_TextChanged"></TextBox>


                    </Grid>
                    <Label x:Name="Popup_CreatedStudent" Content="Student Added to Dropdown List!" Grid.Row="3" VerticalAlignment="Top" FontSize="8" HorizontalAlignment="Center" Visibility="Hidden" Grid.Column="0" Margin="3,1,0,0"/>

                    <Button x:Name="Button_CreateStudent" Content="Create Student" Grid.Row="3" VerticalAlignment="Bottom" Height="30" Margin="10" Click="Button_CreateStudent_Click" IsEnabled="False"/>
                    <Button x:Name="Button_DeleteStudent" Content="Delete Student" Grid.Row="3" Grid.Column="2" VerticalAlignment="Bottom" Height="30" Margin="10" Click="Button_DeleteStudent_Click" IsEnabled="False"/>
                </Grid>
            </Grid>
        </Border>
        <Border x:Name="GpaBorder" Background="White" BorderBrush="Black" BorderThickness="2" Grid.Column="1" Margin="2" CornerRadius="10">
            <Grid IsEnabled="False" x:Name="GpaGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="0.4*"/>
                        <RowDefinition Height="3.5*"/>
                        <RowDefinition Height="0.5*"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="GPA Calculator" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <Label x:Name="DisabledMessage"  Content="Please Select a Student" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" FontSize="20" FontStyle="Italic"/>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Course Name" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="0"/>
                        <Label Content="Letter Grade" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="1"/>
                        <Label Content="Credits" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Column="2"/>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="cNamePanel"  Grid.Column="0">
                                <TextBox x:Name="cName1" VerticalAlignment="Center" Margin="5"/>
                            </StackPanel>
                        </ScrollViewer>

                        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="1">
                            <StackPanel x:Name="lGradePanel">
                                <TextBox x:Name="lGrade1" VerticalAlignment="Center" Margin="5"/>
                            </StackPanel>
                        </ScrollViewer>

                        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="2">
                            <StackPanel x:Name="creditsPanel">
                                <TextBox x:Name="credits1" VerticalAlignment="Center" Margin="5"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                    <Button x:Name="Button_AddCourse" Content="+" Grid.Row="3" Width="50" Margin="130,5" HorizontalAlignment="Left" Click="Button_AddCourse_Click"/>
                    <Button x:Name="Button_RemoveCourse" Content="-" Grid.Row="3" Width="50" Margin="130,5" HorizontalAlignment="Right" Click="Button_RemoveCourse_Click"/>
                </Grid>
                <Label x:Name="GPAResult" Content="---" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="1" FontSize="15" FontWeight="Bold"/>
                <Button x:Name="Button_CalculateGPA" Content="Calculate GPA and Save to File" Grid.Row="1" Margin="10" Height="30" VerticalAlignment="Bottom" FontWeight="Bold" Click="Button_CalculateGPA_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
